<%= content_tag :div, class: 'mock-tracker' do %>
  <% @mock.picks.each_with_index do |pick, i| %>
    <%= content_tag :div, class: "row" do %>
      <%= content_tag :div, "#{i / @mock.team_count + 1}.#{i % @mock.team_count + 1}", class: "col-2 no-vpad" %>
      <%= content_tag :div, class: "col-14 no-vpad mock-tracker-item", id: "pick-#{pick.id}" do %>
        <% if pick.player %>
          <% linkStr = "#{pick.player.first_name} #{pick.player.last_name}" %>
        <% else %>
          <% linkStr = "#{pick.team.name}" %>
        <% end %>
        <%= link_to linkStr, edit_pick_path(pick), class: "mock-tracker-edit-btn", remote: true %>
        <%= content_tag :span, pick.player.position, class: "mock-tracker-right-#{pick.player.position}" if pick.player %>
      <% end %>
    <% end %>
  <% end %>
<% end %>